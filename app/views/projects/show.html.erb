<%= render 'layouts/projects' %>

<div class="main-part">
<div class="pseudo">
  <h1>
    <%= @project.title %>
  </h1>
  
  <% if (!@project.image_url.nil? && @project.image_url != '' )  %>
    <p>
      <%= image_tag(@project.image_url, class: 'list_image') %>
    </p>
  <% end %>

  <p>
    <%= @project.description %>
  </p>

  <%= link_to 'Edit', edit_project_path(@project) %> |
  <%= link_to 'Back', projects_path %>
</div>
</div>
